<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
      <record model="ir.ui.view" id="ship_view_form">
         <field name="name">space.ship.form</field>
         <field name="model">space.ship</field>
         <field name="arch" type="xml">
            <form string="Ship Form">
               <sheet>
                  <h1><field name="model"/></h1>
                  <group>
                     <group>
                        <field name="active"/>
                        <field name="alias"/>
                     </group>
                     <group>
                        <field name="fuel_type"/>
                        <field name="fuel_capacity"/>
                        <field name="length"/>
                        <field name="width"/>
                        <field name="size" force_save="1"/>
                        <field name="capacity"/>
                     </group>
                  </group>
               </sheet>
            </form>
         </field>
      </record>
      <record model="ir.ui.view" id="ship_view_list">
         <field name="name">space.ship.list</field>
         <field name="model">space.ship</field>
         <field name="arch" type="xml">
            <tree string="Spaceship List">
               <field name="alias"/>
               <field name="model"/>
               <field name="capacity"/>
               <field name="active"/>
            </tree>
         </field>
      </record>
   </data>
</odoo>